{
  "env": {
    "browser": true,
    "commonjs": true,
    "es2021": true,
    "node": true,
    "jest": true
  },
  "extends": ["eslint:recommended", "prettier"],
  "parserOptions": {
    "ecmaVersion": "latest"
  },
  "rules": {
    "no-console": [
      "error",
      {
        "allow": ["warn"]
      }
    ],
    "no-empty": [
      "error",
      {
        "allowEmptyCatch": true
      }
    ],
    "no-use-before-define": [
      "error",
      {
        "functions": false,
        "classes": false,
        "variables": true
      }
    ],
    "no-useless-catch": 0,
    "no-duplicate-imports": [
      "error",
      {
        "includeExports": true
      }
    ],
    "max-lines": ["error", 10000],
    "max-lines-per-function": ["error", 1000],
    "no-alert": "error",
    "no-multi-spaces": "error",
    "no-multiple-empty-lines": [
      "error",
      {
        "max": 1,
        "maxEOF": 0
      }
    ],
    "object-curly-newline": "off",
    "array-element-newline": "off",
    "no-useless-escape": "off",
    "max-depth": ["error", 7]
    // "no-inner-declarations": ["both"]
  }
}
